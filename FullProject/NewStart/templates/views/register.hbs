<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    {{>header}}
    {{>style}}
</head>

<body>
    {{>navbar}}

    <h2 class="mx-auto link mt-2 text-center text2 " style="width: 200px;">Registration Form</h2>

    <div class="container d-flex justify-content-center align-self-center flex-column border-sty">

        {{!-- <form class="form-horizontal d-flex flex-column mt-5" action="/register" method="post"> --}}
            <form class="form-horizontal d-flex flex-column mt-5" method="post" id="form_id">

                <div class="form-group mx-5">
                    <label class="control-label col-sm-2 link" for="pwd">Enter Your Name:</label>
                    <div class="col-sm-7 mx-auto">
                        <input type="text" class="form-control text-center" id="name" placeholder="Enter Your Name"
                            name="name" autocomplete="off" required="required">
                    </div>
                </div>

                <div class="form-group mx-5">
                    <label class="control-label col-sm-2 link" for="email">Email:</label>
                    <div class="col-sm-7 mx-auto">
                        <input type="email" class="form-control text-center" id="email" placeholder="Enter Your Email"
                            name="email" autocomplete="off" required="required">
                    </div>
                </div>
                <div class="form-group mx-5">
                    <label class="control-label col-sm-2 link" for="pwd">Password:</label>
                    <div class="col-sm-7 mx-auto">
                        <input type="password" class="form-control text-center" placeholder="Enter Your Password"
                            name="password" autocomplete="off" required="required">
                    </div>
                </div>

                <div class="form-group mx-5">
                    <label class="control-label col-sm-2 link" for="pwd">Confirm Password:</label>
                    <div class="col-sm-7 mx-auto">
                        <input type="password" class="form-control text-center" placeholder="Confirm Your Password"
                            name="cpassword" autocomplete="off" required="required">
                    </div>
                </div>

                <div class="form-group mx-5">
                    <label class="link mx-2 my-2">Set Form Action :</label>
                    <select id="form_action" onChange="select_change()">
                        <option value="">--- Set Form Action ---</option>
                        <option value="user">User</option>
                        <option value="owner">Owner</option>
                    </select>
                </div>


                <div class="align-self-center my-5">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="button" value="Submit" onclick="myfunction()" />
                    </div>
                </div>

            </form>

    </div>


    <script>
        function select_change() {
            var z = document.getElementById("form_action").selectedIndex;
            var z1 = document.getElementsByTagName("option")[z].value;
            alert("Form action changed to " + z1);
        }

        function myfunction() {
            if (validation()) {
                // Calling Validation function.
                //select option value from select tag and storing it in a variable.
                var x = document.getElementById("form_action").selectedIndex;
                var action = document.getElementsByTagName("option")[x].value;
                if (action !== "") {
                    document.getElementById("form_id").action = action;
                    document.getElementById("form_id").submit();
                } else {
                    alert("Please set form action");
                }
            }
        }
        function validation() {
            var name = document.getElementById("name").value;
            var email = document.getElementById("email").value;

            if (name === '' || email === '') {
                alert("Please fill all fields...!!!!!!");
                return false;
            } else if (!(email).match(/\S+@\S+\.\S+/)) {
                alert("Invalid Email...!!!!!!");
                return false;
            } else {
                return true;
            }
        }
    </script>
</body>
{{>footer}}

</html>